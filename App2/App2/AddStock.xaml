<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.AddStock">
  <Label Text="Add Stock" VerticalOptions="Center" HorizontalOptions="Center" />
  <StackLayout Orientation="Vertical">
    <StackLayout Orientation="Horizontal">
      <Label Text ="Ticker:" TextColor="White" FontSize="16"></Label>
      <Entry x:Name="txtTicker" TextColor="White"></Entry>
    </StackLayout>
    <Button Clicked="Button_OnClicked" Text="Add stock" TextColor="White"></Button>
  </StackLayout>
</ContentPage>