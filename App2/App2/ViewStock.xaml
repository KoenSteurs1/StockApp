<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.ViewStock">
  
  <StackLayout Orientation="Vertical" BackgroundColor="Black">
    <Label Text="{Binding Name}" VerticalOptions="Center" FontSize="36" TextColor="White" HorizontalOptions="Center" />
    <Label Text="{Binding Ticker}" FontSize="16" />

    <StackLayout Orientation="Horizontal">
      <Label Text="{Binding ProfitLossString}" FontSize="16" TextColor="Green" />
      <Label Text="{Binding ProfitLossAmountString}" FontSize="16" TextColor="Green" />  
    </StackLayout>
    
    <Label Text="{Binding AmountText}" FontSize="16" />
    <Label Text="{Binding PurchasePriceText}" FontSize="16" />
    <Label Text="{Binding ActualPriceText}" FontSize="16" />
    
    <!--<Label Text="Profit(Loss): { Binding ProfitAmount }" FontSize="16" />-->
  </StackLayout>
</ContentPage>